# container structure test alias
if [[ $OSTYPE == darwin* ]]; then
  # help cst find docker via colima
  alias cst="DOCKER_HOST=unix://$HOME/.colima/docker.sock container-structure-test"
else
  alias cst="container-structure-test"
fi
